# Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# API Configuration (for future web app integration)
VITE_API_BASE_URL=https://api.bridgitsocial.com
VITE_API_TIMEOUT=10000

# Authentication Endpoints (placeholder)
VITE_AUTH_ENDPOINT=/auth
VITE_LOGIN_ENDPOINT=/auth/login
VITE_SIGNUP_ENDPOINT=/auth/signup

# Feature Flags
VITE_ENABLE_WEB_APP=false
VITE_ENABLE_LOGIN=false
VITE_ENABLE_BLOG_COMMENTS=false

# Analytics (optional)
VITE_GA_MEASUREMENT_ID=
VITE_ENABLE_ANALYTICS=false

# Environment
VITE_ENVIRONMENT=development
